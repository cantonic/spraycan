<form id="stylesheet_form" class="form-stacked">
  <fieldset>
    <div class="clearfix">
      <label>Name:</label>
      <div class="input">
        <input type="text" name="name" value="<%= javascript.name %>">
      </div>
    </div>
    <div class="clearfix">
      <label>Code:</label>
      <pre id="javascriptc_js" class="small_editor">p {}</pre>
    </div>
    <div class="actions clearfix">
      <div class="pull-right">
        <button rel="save" class="btn primary">Save Changes</button>
        <a rel="delete" href="/spraycan#javascript?delete=<%= cid %>&confirm=<%= javascript.id==undefined ? 'true' : 'false' %>" class="btn danger" >
          <%= javascript.id==undefined ? 'Discard' : 'Delete' %>
        </a>
        <a href="/spraycan#javascript?all" class="btn">Close</a>
      </div>
    </div>
  </fieldset>
</form>
