<div class="container-fluid">
  <form id="theme_form" class="form-stacked">
    <fieldset>
      <div class="row">
        <div class="pull-left">
          <% if(theme.id==undefined){ %>
            <h3>Create New Theme</h3>
          <% } %>

          <div class="row clearfix">
            <div class="span4">
              <label>Name:</label>
              <div class="input">
                <input name="name" type="text" value="<%= theme.name %>">
              </div>
            </div>

            <div class="span4">
              <label>Applies To:</label>
              <div class="input">
                <input name="applies_to" type="text" value="<%= theme.applies_to %>">
              </div>
            </div>
          </div>

          <ul class="clearfix inputs-list">
            <li>
              <label>
                <input type="checkbox" value="true" name="active" <%= theme.active ? 'checked="checked"' : '' %>>
                <span><strong>Active</strong> - this theme will be applied to current site.</span>
              </label>
            </li>
          </ul><br>
        </div>
    </div>
    </fieldset>
  </form>
</div>

<div class="actions row clearfix">
  <div class="pull-right">
    <button rel="save" class="btn primary">Save Changes</button>
    <a rel="delete" href="/spraycan#theme?delete=<%= cid %>&confirm=<%= theme.id==undefined ? 'true' : 'false' %>" class="btn danger" >
      <%= theme.id==undefined ? 'Discard' : 'Delete' %>
    </a>
    <a href="/spraycan#theme?all" class="btn">Close</a>
  </div>
</div>

