<div class="container-fluid">
  <h3>Stylesheets</h3>
  <p>I can't think of any text to put here, but the view looks much better with something.</p>
  <table class="condensed-table zebra-striped">
    <thead>
      <tr>
        <th class="span6">Name</th>
        <th class="align-right">Action</th>
      </tr>
    </thead>
    <tbody>
     <% if(Spraycan.loaded.stylesheets){ %>
        <% if(collection.length==0){ %>
          <tr>
            <td colspan="2">No stylesheets found.</td>
          </tr>
        <% } %>
        <% collection.each(function(item) { %>
          <tr>
            <td>
              <%= item.escape('name') %>
              <% if(item.get('id')==undefined){ %>
                <em>*</em>
              <% } %>
            </td>
            <td class="align-right">
              <a href="/spraycan#stylesheet/<%= item.cid %>" class="btn small primary">Edit</a>
              <% if(item.id==undefined){ %>
                <a href="/spraycan#stylesheet?delete=<%= item.cid %>&confirm=true" class="btn small danger">Discard</a>
              <% }else{ %>
                <a href="/spraycan#stylesheet?delete=<%= item.cid %>&confirm=false" class="btn small danger">Delete</a>
              <% } %>
            <td>
          </tr>
        <% }); %>
      <% }else{ %>
        <tr>
          <td colspan="5">Loading...</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
