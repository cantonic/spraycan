<%= javascript_include_tag 'deface/embed' %>
<%= javascript_tag do %>
  $jQ(function(){
    if(top.Deface!=undefined){
      top.location = "/deface#templates/<%=params[:controller]%>/<%=params[:action]%>";
    }
  });
<% end %>
<%= stylesheet_link_tag 'deface/embed' %>

<% if Rails.env.development? %>
  <% Theme.active.each do |theme| %>
    <% theme.stylesheets.each do |stylesheet| %>
      <style id="<%= stylesheet.name %>">
        <%= stylesheet.css %>
      </style>
    <% end %>
    <% theme.javascripts.each do |javascript| %>
      <script type="text/javascript" id="<%= javascript.id %>">
        <%= javascript.js %>
      </script>
    <% end %>
  <% end %>
<% end %>
